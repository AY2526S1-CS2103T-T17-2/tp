@startuml
!include style.puml
skinparam BoxPadding 0
skinparam ArrowFontStyle plain

actor User USER_COLOR

box UI UI_COLOR_T1
participant ":CommandBox" as CommandBox UI_COLOR
end box

box Logic LOGIC_COLOR_T1
participant ":Logic" as Logic LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":CommandHistory" as CommandHistory MODEL_COLOR
end box

User -> CommandBox : presses Up Arrow
activate CommandBox

CommandBox -> CommandBox : handleUpArrow()
activate CommandBox

CommandBox -> CommandBox : save temporaryInput
activate CommandBox
deactivate CommandBox

CommandBox -> Logic : getCommandHistory()
activate Logic

Logic --> CommandBox : commandHistory
deactivate Logic

CommandBox -> CommandHistory : getPreviousCommand()
activate CommandHistory

CommandHistory --> CommandBox : Optional<previousCommand>
deactivate CommandHistory

alt previousCommand is present
    CommandBox -> CommandBox : setText(previousCommand)
    activate CommandBox
    deactivate CommandBox

    CommandBox -> CommandBox : positionCaret()
    activate CommandBox
    deactivate CommandBox
end

deactivate CommandBox

CommandBox --> User : displays previous command
deactivate CommandBox
@enduml

